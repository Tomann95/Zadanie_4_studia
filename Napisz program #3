using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Podaj wysokość trójkąta:");
        int wysokosc = int.Parse(Console.ReadLine());

        for (int i = 0; i < wysokosc; i++)
        {
            for (int j = 0; j <= i; j++)
            {
                Console.Write("+");
            }

            Console.WriteLine();
        }

        Console.ReadLine();
    }
}
